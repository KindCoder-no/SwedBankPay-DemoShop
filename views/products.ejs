<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Products - DemoShop</title>

    <link rel="stylesheet" href="https://design.swedbankpay.com/v/8.0.1/styles/swedbankpay.css" />

    <!-- Bootstrap -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
</head>
<body>
    <!-- Navbar -->
    <%- include('includes/navbar') %>

    <div class="mt-5"></div>
    <div class="container">
        <div class="row">
            <% products.forEach(data => { %>
                <div class="col-md-4 md-push-4">
                    <!--<div class="card" style="width: 100%;">
                        <img src="<%= data.images[0] %>" class="card-img-top" alt="...">
                        <div class="card-body">
                            <h5 class="card-title"><%= data.name %></h5>
                            <p class="card-text"><%= data.description_short %></p>
                            <div class="row">
                                <div class="col">
                                    <a href="/product/<%= data.id %>" ><button class="btn btn-primary">Read More</button></a>

                                </div>
                                <div class="col">
                                    <button onclick='addcart("<%= data.id %>")' class="btn btn-primary" >Add to cart</button>

                                </div>
                                <div class="col">
                                    <p class="text-center"><%= data.price %> NOK</p>

                                </div>
                            </div>
                            

                        </div>
                    </div>-->
                    <div>
                        <a href="#" class="cards cards-primary">
                            <div class="cards-icon">
                                <i class="material-icons material-icons-outlined" aria-hidden="true">shopping_basket</i>
                            </div>
                            <img src="<%= data.images[0] %>" />
                            <div class="cards-content">
                                <span class="h4"><%= data.name %></span><span><%= data.description_short %></span>
                            </div>
                            <button onclick='addcart("<%= data.id %>")' class="btn btn-primary" type="button">Add to cart</button>
                            <div class="mt-3"></div>
                            <i class="material-icons" aria-hidden="true" onclick="product('<%= data.id %>')">arrow_forward</i>
                        </a>
                    </div>
                </div>
                
            <% }) %>
            
        </div>
    </div>

    <script src="https://design.swedbankpay.com/v/8.0.1/scripts/dg.js" global="true" autoload="true"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js" integrity="sha256-/xUj+3OJU5yExlq6GSYGSHk7tPXikynS7ogEvDej/m4=" crossorigin="anonymous"></script>
    <script>
        getparams()
        function addcart(id){
            $.ajax({
                url: "http://localhost:5000/product/" + id + "/add-cart/button",
                contentType: "application/json",
                dataType: 'json',
                success: function(result){
                    console.log(result);
                }
            })
            
            location.assign("?cart=added");
            
        }
        function getparams () {
            const params = new Proxy(new URLSearchParams(window.location.search), {
                get: (searchParams, prop) => searchParams.get(prop),
            });
            // Get the value of "some_key" in eg "https://example.com/?some_key=some_value"
            let value = params.cart; // "some_value"
            console.log(value)
            if(params.cart === "added"){
                dg.toast({
                    type: 'success',
	                html: '<h3><b>Added to cart</b> </h3>'
                })
                
            }
        }

        function product (id){
            location.assign("/product/" + id);

        }
       
        
    </script>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
