    <script>
        getparams()
        function addcart(id){
            $.ajax({
                url: "http://localhost:5000/product/" + id + "/add-cart/button",
                contentType: "application/json",
                dataType: 'json',
                success: function(result){
                    console.log(result);
                }
            })
            
            location.assign("?cart=added");
            
        }
        function getparams () {
            const params = new Proxy(new URLSearchParams(window.location.search), {
                get: (searchParams, prop) => searchParams.get(prop),
            });
            // Get the value of "some_key" in eg "https://example.com/?some_key=some_value"
            let value = params.cart; // "some_value"
            console.log(value)
            if(params.cart === "added"){
                dg.toast({
                    type: 'success',
	                html: '<h3><b>Added to cart</b> </h3>'
                })
                
            }
        }

        function product (id){
            location.assign("/product/" + id);

        }
       
        
    </script>

