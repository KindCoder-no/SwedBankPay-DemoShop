<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>DemoShop</title>

    <!-- Bootstrap -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
</head>
<body>
    <!-- Navbar -->
    <%- include('includes/navbar') %>

    <div class="mt-5"></div>
    <div class="container">
        <div class="row">
            <% products.forEach(data => { %>
                <div class="col-md-4 md-push-4">
                    <div class="card" style="width: 100%;">
                        <img src="<%= data.images[0] %>" class="card-img-top" alt="...">
                        <div class="card-body">
                            <h5 class="card-title"><%= data.name %></h5>
                            <p class="card-text"><%= data.description_short %></p>
                            <div class="row">
                                <div class="col">
                                    <a href="/product/<%= data.id %>" class="btn btn-primary">Read More</a>

                                </div>
                                <div class="col">
                                    <a href="/product/<%= data.id %>/add-cart" class="btn btn-primary">Add to cart</a>

                                </div>
                                <div class="col">
                                    <p class="text-center"><%= data.price %> NOK</p>

                                </div>
                            </div>
                            

                        </div>
                    </div>
                </div>
            <% }) %>
            
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
</body>
</html>