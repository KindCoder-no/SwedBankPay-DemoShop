<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Product - DemoShop</title>

    <!-- Swedbank Pay -->
    <link rel="stylesheet" href="https://design.swedbankpay.com/v/8.0.1/styles/swedbankpay.css" />
    <!-- Bootstrap -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">


</head>
<body>
    <!-- Navbar -->
    <%- include('includes/navbar') %>

    <div class="mt-5"></div>
    <div class="container ">
        <div class="row align-items-center">
            <div class="col-md-3 md-push"></div>
            <div class="col-md-6 md-push align-items-center">
                <h1 class="text-center"><%= product.name %></h1>
                <p class="text-center"><%= product.description_short %></p>
                <div class="mt-3"></div>
                <div id="carouselExampleIndicators" class="carousel slide" data-bs-ride="carousel">
                    <div class="carousel-indicators">
                        <% product.images.forEach(function (data, index) {  %>
                        <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="<%= index %>" class="active" aria-current="true" aria-label="Slide <%= index %>">
                           
                        </button>
                        <!--<img type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="<%= index %>" aria-current="true" aria-label="Slide <%= index %>" src="<%= data %>" alt="" height="20">-->

                        <!--<button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="1" aria-label="Slide 2"></button>
                        <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="2" aria-label="Slide 3"></button>-->
                        <% }) %>
                    </div>
                    <div class="carousel-inner">
                        <% product.images.forEach(function (data, index) { 
                            if(index === 0) { %>
                                <div class="carousel-item active">
                            <% }else{ %>
                                <div class="carousel-item ">
                            <% }  %>
                                <img src="<%= data %>" class="d-block w-100">
                              </div>
                        <% }) %>
                     
                        <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="prev">
                            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                            <span class="visually-hidden">Previous</span>
                          </button>
                          <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="next">
                            <span class="carousel-control-next-icon" aria-hidden="true"></span>
                            <span class="visually-hidden">Next</span>
                          </button>
                    </div>
                </div>
                <div class="mt-5"></div>
                <p class="text-center"><%- product.description %></p>

                <button onclick="addcart()" class="btn btn-primary ">Add to cart: <%= product.price %> NOK</button></a>
            </div>


        </div>
        
    </div>
    <script src="https://design.swedbankpay.com/v/8.0.1/scripts/dg.js" global="true" autoload="true"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js" integrity="sha256-/xUj+3OJU5yExlq6GSYGSHk7tPXikynS7ogEvDej/m4=" crossorigin="anonymous"></script>
    <script>
        getparams()
        function addcart(){
            $.ajax({
                url: "http://localhost:5000/product/<%= product.id %>/add-cart/button",
                contentType: "application/json",
                dataType: 'json',
                success: function(result){
                    console.log(result);
                }
            })
            
            location.assign("?cart=added");
            
        }
        function getparams () {
            const params = new Proxy(new URLSearchParams(window.location.search), {
                get: (searchParams, prop) => searchParams.get(prop),
            });
            // Get the value of "some_key" in eg "https://example.com/?some_key=some_value"
            let value = params.cart; // "some_value"
            console.log(value)
            if(params.cart === "added"){
                dg.toast({
                    type: 'success',
	                html: '<h3><b>Added to cart</b> </h3>'
                })
                
            }
        }
       
        
    </script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
</body>
</html>